<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:layout_margin="10dp"
    android:background="@drawable/corner_2"
    android:elevation="10dp"
    tools:context=".List_all_book">

    <ImageView
        android:id="@+id/image"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:background="@drawable/icons_user_male_500" />

    <TextView
        android:id="@+id/fullnameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/image"
        android:text="User's fullname"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fullnameUser"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/image"
        android:text="username"
        android:textColor="#7E242126"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/userorle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/image"
        android:text="Role"
        android:textColor="#7E242126"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userorle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/image"
        android:text="Status"
        android:textColor="#7E242126"
        android:textSize="16sp" />


</RelativeLayout>
